mixin productList(list)
  - for (var i = 0; i < list.length; i++)
      if list[i].quantity == " "
        li 
          a.product__item(href="#")=list[i].name 
      else
        li 
          a(href="#")=list[i].name+" ("+list[i].quantity+")" 
mixin productTag (list)
    - for (var i = 0; i < list.length; i++)
        a(href="#")=list[i]